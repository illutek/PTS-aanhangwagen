{#
/**
 * @file
 * Theme override to display a node.
 *
 *
 * @see template_preprocess_node()
 *
 * @todo Remove the id attribute (or make it a class), because if that gets
 *   rendered twice on a page this is invalid CSS for example: two lists
 *   in different view modes.
 */
#}
{% set bodytext = content.body|render|striptags %}
{# Text lenght variable #}
{% set textlenght = 250 %}

{%
  set classes = [
    'node',
    'node-teaser-parts',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('classy/node') }}
<article{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {% if label and not page %}
    <h2{{ title_attributes }} class="node-teaser-parts__title">
      <a href="{{ url }}" class="c-readmore c-readmore--white">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}


  <div{{ content_attributes.addClass('node__content') }}>
    <p>
       {{ bodytext|length > textlenght ? bodytext|slice(0, textlenght) ~ '...' : bodytext }}
    </p>

  </div>

    <div class="c-readmore__region">
    {% if bodytext|length > textlenght %}
      <a href="{{ url }}" class="c-readmore c-readmore--white">{{ '>>>' }}</a>
    {% endif %}
  </div>

</article>
